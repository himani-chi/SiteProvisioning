@model SiteProvisioningWebAppClient.Models.SiteProvisionRequest
@{
    ViewData["Title"] = "Site Provisioning";
}

<h2>Site Provisioning</h2>

<form asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <label asp-for="SiteName"></label>
        <input asp-for="SiteName" class="form-control" />
        <span asp-validation-for="SiteName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Alias"></label>
        <input asp-for="Alias" class="form-control" />
        <span asp-validation-for="Alias" class="text-danger"></span>
    </div>

    <button type="submit">Provision Site</button>
</form>

@if (!string.IsNullOrWhiteSpace(ViewBag.ApiResponse as string))
{
    <h4>API Response:</h4>
    <p>@ViewBag.ApiResponse</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
